extends base.pug

block scripts
    script(src="/static/index.js")

block style
    style 
        include ../static/style.css 
        include ../static/style-contact.css 

block content
    h1 Contact Us
    div.container 
        form(action="/contact", method="post" class = "myForm")
            input(type="text" class = "myInput" name = "name" placeholder = "Enter Your Name")
            input(type="number" class = "myInput" name = "age" placeholder = "Enter Your Age")
            input(type="text" class = "myInput" name = "gender" placeholder = "Enter Your Gender")
            input(type="phone" class = "myInput" name = "number" placeholder = "Enter Your Number")
            input(type="email" class = "myInput" name = "email" placeholder = "Enter Your E-mail")
            input(type="text" class = "myInput" name = "address" placeholder = "Enter Your Address")
            input(type="text" class = "myInput" name = "desc" placeholder = "Enter Your Concern / Query")
            button(type="submit" class = "btn")
                | Submit
        

